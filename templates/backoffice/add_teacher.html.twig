{% extends 'base.html.twig' %} {% block title %}TiMMIng - ajout d'un prof{% endblock %}
{% block body %}
<div class="header">
<a href="{{ path('index')}}"><img src="{{ asset( 'img/logo.png' ) }}" alt="logo"></a>
 <h1>Ajouter un nouveau professeur</h1>
  <div class="header-right">
    <a href="{{ path('teachers')}}">Retour</a>
    <a href="{{ path('backoffice')}}">Connexion</a>
  </div>
</div>
<div class="container centrer">
    <form action="{{ path('teacher_add_save')}}" method="POST" class="w-50" enctype="multipart/form-data">

        <div class="form-group">
            <label for="formGroupExampleInput">Nom :</label>
            <input name="name" type="text" class="form-control">
        </div>
        <p>ajout du choix pour l'ann√©e</p>
        <p>ajout du choix pour la campagne</p>

        <div class="form-group row">
            <label class="col-2 col-form-label">Modules :</label>
            <div class="col-8">
                <select name="module[]" class="custom-select" multiple>
                    {% for module in modules %}
                    <option value="{{ module.id }}">{{ module.name }}
                    </option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <button type="submit" class="btn btn-outline-primary mt-4 tasks__subtitle centrer">Enregistrer ce nouveau module</button>
    </form>



</div>
</div>

</div>


{% endblock %}