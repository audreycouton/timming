{% extends 'base.html.twig' %} {% block title %}Liste des professeurs{% endblock
%} {% block body %}
<div class="header">
<a href="{{ path('index')}}"><img src="{{ asset( 'img/logo.png' ) }}" alt="logo"></a>
 <h1>Les professeurs</h1>
  <div class="header-right">
    <a href="{{ path('backoffice')}}">Retour</a>
    <a href="{{ path('backoffice')}}">Connexion</a>
  </div>
</div>

<div class"task ">

<a href="{{ path('teacher_add')}}" class="centrer"><h2 class=" tasks__subtitle">Ajouter un prof</h2></a>
</div>
<div>

<div class="container">
    <table  class="forms" >
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Modules</th>
                <th scope="col">Suppression</th>
                <th scope="col"> Modification</th>

            </tr>
        </thead>
        <tbody>
            {% for teacher in teachers %}
            <tr>
                <th scope="row">
                    <a href="{{ path('teacher_show' ,{id:teacher.id})}}">
                        {{ teacher.name }}</a>
                </th>
                <th scope="row">{% for module in modules %}
                    {% if module.teacher_id == teacher.id %}
                    {{ module.module_name }}
                    {% endif %}
                    {% endfor %}</th>
                <td>
                    <form action="{{ path('teacher_delete' ,{id:teacher.id})}}" method="POST" class="d-inline">
                        <input type="hidden" name="_method" value="delete">
                        <button class="btn" type="submit">Supprimer</button>
                    </form>
                </td>
                <td>
                <td><a href="{{ path('teacher_edit', { id: teacher.id })}}">Editer</a></td>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}