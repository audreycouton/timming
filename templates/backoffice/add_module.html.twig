{% extends 'base.html.twig' %} {% block title %}TiMMIng - ajout d'un module{% endblock %}
{% block body %}
<div class="header">
<a href="{{ path('index')}}"><img src="{{ asset( 'img/logo.png' ) }}" alt="logo"></a>
 <h1>Ajouter un nouveau module</h1>
  <div class="header-right">
    <a href="{{ path('modules')}}">Retour</a>
    <a href="{{ path('backoffice')}}">Connexion</a>
  </div>
</div>
<div class="container centrer">
    
    <form action="{{ path('module_add_save')}}" method="POST" class="w-50" enctype="multipart/form-data">

        <div class="form-group">
            <label for="formGroupExampleInput">Nom :</label>
            <input name="name" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput">Semestre :</label>
            <input name="semester" type="text" class="form-control">
        </div>

        <div class="form-group row">
            <label class="col-2 col-form-label">Professeur(s) :</label>
            <div class="col-8">
                <select name="teacher[]" class="custom-select" multiple>
                    {% for teacher in teachers %}
                    <option value="{{ teacher.id }}">{{ teacher.name }}
                    </option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-8">
                <select name="year" class="custom-select" multiple>
                    {% for year in years %}
                    <option value="{{ year.id }}">{{ year.year }}
                    </option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <button type="submit" class="btn btn-outline-primary mt-4 tasks__subtitle centrer">Enregistrer ce nouveau module</button>
    </form>



</div>
</div>

</div>


{% endblock %}